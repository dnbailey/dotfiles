#!/usr/bin/env bash

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dc="cd ~/code && ls"
alias c="clear"

# Git Shortcuts
alias g="git"
alias gs="git status"
alias ga="git add -A"
alias gc="git commit"

# Processing-Java
alias p='processing-java --sketch=`pwd` --run'

# Asciinema Record with Docker
alias anr='docker run --rm -ti -v "$HOME/.config/asciinema":/root/.config/asciinema asciinema/asciinema /bin/bash'
